<div class="rcol-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit</h3>
        </div>
        <div class="card-body">
            <form action="/note/editnote/{{note._id}}?_method=PUT" method="POST">
               <input type="hidden" name="_method" value="PUT" >
               <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title"
                    value="{{note.title}}">
               </div>
               <div class="form-group">
                   <textarea name="description" class="for-control" >{{note.description}}
                   </textarea>
               </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-block" type="submit">
                       save
                   </button>
               </div>
            </form>
        </div>
    </div>

</div>